{
    "manifest_version": 2,
    "name": "Lebact",
    "description": "Show what you're doing to others!",
    "version": "1.0",
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "youtube.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Lebact"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "@lebact-data-collection-perms",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}
