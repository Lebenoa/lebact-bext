{
    "manifest_version": 3,
    "name": "Lebact",
    "description": "Show what you're doing to others!",
    "version": "1.0",
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "youtube.js"
            ]
        }
    ],
    "action": {
        "default_title": "Lebact"
    }
}
